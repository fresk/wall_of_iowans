<ScrollListView>:
    scroll_layer: scroller
    layout: list_container

    ScatterPlane:
        id: scroller
        do_translation_y: False
        do_translation_x: False
        do_rotation: False
        do_scale: False


        GridLayout:
            id: list_container
            padding: 0
            height: 800
            
            rows: 1
            spacing: 0
            width: self.minimum_width
            size_hint_x: None


<ListPhoto>
    size_hint: None, None
    #size: (800,800) if root.data['title'] == app.selected_iowan['title'] else (512, 512)
    size: (800,800)
    Image:
        size: (800,800)
        #size: (800,800) if root.data['title'] == app.selected_iowan['title'] else (512,512)
        opacity: 1.0 if root.data['title'] == app.selected_iowan['title'] else 0.7
        allow_stretch: True
        source: root.data['image_alt_source']

    Image:
        pos: 0,-80
        size: (800,800)
        #size: (800,800) if root.data['title'] == app.selected_iowan['title'] else (512,512)
        opacity: 1.0 if root.data['title'] == app.selected_iowan['title'] else 0.0
        allow_stretch: True
        source: 'img/more.png'

    Button:
        opacity: 0.0
        on_press: root.on_press()
        size: (800,800)
        size_hint: None, None








<MapView>:
    layout: container
    size: 1024, 676
    size_hint: None, None
    ScatterPlane:
        auto_bring_to_front: False
        do_scale: False
        do_rotation: False
        do_translation: False
        size: root.size
        size_hint: None, None
        scale: 1
        id: container
        canvas:
            Color: 
                rgba: 1,1,1,root.opacity
            Rectangle:
                pos: 0,0
                size: self.size
                source: "img/iowa.png"

