#:kivy 1.9





<GridView>:
    layout: gridlayout
    GridLayout:
        id: gridlayout
        cols: 8  if len(root.items)> 20 else 5


<GridItem>:
    Image: 
        source: root.data['image_alt_source']
        allow_stretch: True
     



<Photo>:
    size_hint: None, None
    size: 500,500
    Image:
        pos: 0,0
        size: 500,500
        source: root.source
        


<TransformLayer>:
    do_translation: False
    do_rotation: False
    do_scale: False



